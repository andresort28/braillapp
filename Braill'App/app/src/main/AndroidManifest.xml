<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.rubikon.braillapp" >

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ScreenSplash"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CargaTweets"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.MyTheme" >
            android:label="@string/title_activity_carga_tweets" >
        </activity>
        <activity
            android:name=".NoHayTweets"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.MyTheme" >
            android:label="@string/title_activity_no_hay_tweets" >
        </activity>
        <activity
            android:name=".BrailleScreen"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.MyTheme" >
            android:label="@string/title_activity_braille_screen" >
        </activity>
    </application>

</manifest>
